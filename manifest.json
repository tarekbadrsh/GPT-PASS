{
    "manifest_version": 2,
    "name": "GPT-PASS",
    "version": "1.0.0",
    "description": "Generate strong and secure passwords with the GPT-PASS extension.",
    "icons": {
        "48": "icons/icon2.png",
        "96": "icons/icon2.png"
    },
    "permissions": [
        "contextMenus",
        "clipboardWrite",
        "storage",
        "notifications",
        "tabs",
        "activeTab",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icons/icon2.png",
        "default_title": "GPT-PASS",
        "default_popup": "html/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "options_ui": {
        "page": "html/options.html",
        "browser_style": true,
        "open_in_tab": true
    },
    "web_accessible_resources": [
        "icons/*"
    ],
    "browser_specific_settings": {
        "edge": {
            "browser_action_next_to_addressbar": true
        }
    },
    "applications": {
        "gecko": {
            "id": "gpt-pass@example.com",
            "strict_min_version": "60.0"
        }
    }
}