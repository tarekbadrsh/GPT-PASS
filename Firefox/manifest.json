{
    "manifest_version": 2,
    "name": "GPT-PASS",
    "version": "1.1.1",
    "description": "Generate strong and secure passwords with the GPT-PASS extension.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "96": "icons/icon96.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "js": [
                "js/content.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "browser_action": {
        "default_title": "GPT-PASS",
        "default_popup": "html/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "64": "icons/icon64.png",
            "96": "icons/icon96.png"
        }
    },
    "permissions": [
        "contextMenus",
        "clipboardRead",
        "clipboardWrite",
        "storage",
        "notifications",
        "tabs",
        "activeTab",
        "<all_urls>"
    ],
    "options_ui": {
        "page": "html/options.html",
        "browser_style": true,
        "open_in_tab": true
    },
    "web_accessible_resources": [
        "icons/*"
    ],
    "incognito": "spanning",
    "browser_specific_settings": {
        "edge": {
            "browser_action_next_to_addressbar": true
        }
    }
}